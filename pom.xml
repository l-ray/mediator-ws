    <modelVersion>4.0.0</modelVersion>
    <packaging>war</packaging>

    <artifactId>mediator-ws</artifactId>
    <groupId>de.clubspot.mediator</groupId>
    <version>1.0.1-SNAPSHOT</version>
    <name>myBlock1</name>
