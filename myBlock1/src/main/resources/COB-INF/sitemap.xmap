<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap" xmlns:servlet="http://apache.org/cocoon/servlet"
             xmlns:controller="http://apache.org/cocoon/controller">

    <map:pipelines>
        <map:pipeline>
            <map:match pattern="">
                <map:read src="welcome.html"/>
            </map:match>
        </map:pipeline>

        <map:pipeline>
            <map:match pattern="demo/{patternId}/{startDate}/">
                <map:generate src="currentDemoResult.xml"/>
                <map:serialize type="json"/>
            </map:match>
        </map:pipeline>

        <map:pipeline>
            <map:match pattern="sources/{patternId}/">
                <map:generate type="source-info">
                    <map:parameter name="patternId" value="{map:patternId}"/>
                </map:generate>
                <map:serialize type="json">
                    <map:parameter name="patternId" value="{map:patternId}"/>
                    <map:parameter name="dropRoot" value="false"/>
                </map:serialize>
            </map:match>
        </map:pipeline>

        <map:pipeline>
            <map:match pattern="results/{patternId}/{startDate}/">
                <map:generate type="pattern-code">
                    <map:parameter name="patternId" value="{map:patternId}"/>
                    <map:parameter name="startDate" value="{map:startDate}"/>
                    <map:parameter name="endDate" value="2015-01-30"/>
                </map:generate>
                <map:transform type="regional-format"/>
                <map:transform type="regex-rewrite">
                        <map:parameter name="onElements" value="pictures" />
                </map:transform>
                <map:transform type="connection-id">
                    <map:parameter name="elementLocalName" value="results"/>
                    <map:parameter name="idElementLocalName" value="connection"/>
                    <map:parameter name="id" value="{map:patternId}-{map:startDate}"/>
                </map:transform>

                <!-- map:transform type="term-weight"/ -->
                <map:transform type="extract-element">
                    <map:parameter name="elementToBeExtracted" value="pictures"/>
                    <map:parameter name="newExtractedElementName" value="pictures"/>
                    <map:parameter name="targetParent" value="resultset"/>
                    <map:parameter name="elementParent" value="results"/>
                    <map:parameter name="elementParentId" value="id"/>
                    <map:parameter name="extractedElementId" value="id"/>
                    <map:parameter name="extractedElementIdPrefix" value="{map:patternId}-{map:startDate}-"/>
                    <map:parameter name="elementParentIdPrefix" value="{map:patternId}-{map:startDate}-"/>
                </map:transform>
                <map:serialize type="json">
                    <map:parameter name="patternId" value="{map:patternId}"/>
                    <map:parameter name="startDate" value="{map:startDate}"/>
                </map:serialize>
            </map:match>
        </map:pipeline>

        <map:pipeline>
            <map:match pattern="resultsAsXml/{patternId}/{startDate}/">
                <map:generate type="pattern-code">
                    <map:parameter name="patternId" value="{map:patternId}"/>
                    <map:parameter name="startDate" value="{map:startDate}"/>
                    <map:parameter name="endDate" value="2015-01-30"/>
                </map:generate>
                <map:transform type="regional-format"/>
                <map:transform type="connection-id">
                    <map:parameter name="elementLocalName" value="results"/>
                    <map:parameter name="idElementLocalName" value="connection"/>
                    <map:parameter name="id" value="{map:patternId}-{map:startDate}"/>
                </map:transform>
                <!-- map:transform type="term-weight"/ -->
                <map:transform type="extract-element">
                    <map:parameter name="elementToBeExtracted" value="pictures"/>
                    <map:parameter name="newExtractedElementName" value="pictures"/>
                    <map:parameter name="targetParent" value="resultset"/>
                    <map:parameter name="elementParent" value="results"/>
                    <map:parameter name="elementParentId" value="id"/>
                    <map:parameter name="extractedElementId" value="id"/>
                    <map:parameter name="extractedElementIdPrefix" value="{map:patternId}-{map:startDate}-"/>
                    <map:parameter name="elementParentIdPrefix" value="{map:patternId}-{map:startDate}-"/>
                </map:transform>
                <map:serialize type="xml"/>
            </map:match>
        </map:pipeline>

    </map:pipelines>

</map:sitemap>
