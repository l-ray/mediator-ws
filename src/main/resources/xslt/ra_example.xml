<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet type="text/xsl" href="./transform.xsl" ?>
<eventlist
        baseUrl="http://www.residentadvisor.net"
        startUrl="/events.aspx?ai=43&amp;v=day&amp;mn={startMonth}&amp;yr={startYear}&amp;dy={startDay}"
        xpath="//*[@itemtype='http://data-vocabulary.org/Event']"
        condition="-eventlist-condition-"
        regex="-eventlist-regex-">
    <event>
        <title>
            <xpath>normalize-space(data(//header[@id='header']//div[@id='sectionHead']/h1/text()))</xpath>
        </title>
        <start>
            <xpath>substring(data(//*[@itemprop='startDate']/@datetime),0,11)</xpath>
        </start>
        <grouping url="//*[@itemprop='url']/@href">
            <description>
                <xpath>normalize-space(data(string-join(//*[@id='event-item']/div[@class='left']/p/text(),' ')))</xpath>
            </description>
            <location>
                <xpath>normalize-space(data(//aside[@id='detail']/ul/li[2]))</xpath>
            </location>
            <pictures>
                <xpath>data(//*[@id='event-item']//div[@class='flyer']/a/img/@src)</xpath>
            </pictures>
            <price>
                <xpath>normalize-space(data(//aside[@id='detail']/ul/li[3]))</xpath>
            </price>
        </grouping>
    </event>
</eventlist>